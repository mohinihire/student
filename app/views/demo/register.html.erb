
<div class ="Register page">
   <h2> Register</h2>
   <%=form_for(:users,url: {controller:"user", action:'create'})do |t|%>
    <table summary="Book form fields">
    	<tr>
    		<th> Username </th>
    		<td> <%=t.text_field(:username)%> </td>
    	</tr>
    	<tr>
    		<th> Email </th>
    		<td> <%=t.text_field(:email)%> </td>
    	</tr>
    	<tr>
    		<th> Password </th>
    		<td> <%=t.text_field(:password)%> </td>
    	</tr>
    </table>
    <div class="form-button">
    	<%=submit_tag("Register")%>
    </div>
    <%end %>
</div>

